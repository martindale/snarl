extends layout

block content
  header.jumbotron.subhead
    .container
      h1 Songs
      p.lead
        | Everything that have been played.
  br
  .container
    .row
      .span6
        h2 All Time
        ol
          - for song in allTime
            li
              a(href="/songs/#{song.id}") #{song.author} &mdash; #{song.title}
              |  was played <strong>#{song.plays}</strong> times.

      .span6
        h2 Month
        ol
          - for song in month
            li
              a(href="/songs/#{song.id}") #{song.author} &mdash; #{song.title}
              |  was played <strong>#{song.plays}</strong> times.

        h2 Week
        ol
          - for song in week
            li
              a(href="/songs/#{song.id}") #{song.author} &mdash; #{song.title}
              |  was played <strong>#{song.plays}</strong> times.