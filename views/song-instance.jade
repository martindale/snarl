extends layout

block content
  header.jumbotron.subhead
    .container
      h1 #{song._song.title}
      p.lead
        | #{song._song.author}
  br
  .container
    - if (typeof(song._dj) != 'undefined')
      h1
       | Played by  
       a(href="/djs/#{song._dj.plugID}") #{song._dj.name}
       - if (typeof(song.timestamp) != 'undefined')
         small 
           a(href="/history/#{song._id}")
             abbr.timeago(title="#{song.isoDate}")
       - if (song.nsfw)
         span.label.label-warning NSFW
      p <strong>#{song.curates.length}</strong> people added this song because of this play: 
       ul
         - for curate in song.curates
           li
             a(href="/djs/#{curate._person.id}") #{curate._person.name}  